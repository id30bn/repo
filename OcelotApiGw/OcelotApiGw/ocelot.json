{
  "Routes": [
    //auth example
    {
      "UpstreamHttpMethod": [ "Post", "Put", "Delete" ],
      "UpstreamPathTemplate": "/catalog/{everything}",
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7178
        }
      ],
      //"AllowedScopes": [ "catalog", "create" ] // corresponds to Manager role
    },
    // caching
    {
      "UpstreamHttpMethod": [ "Get" ],
      "UpstreamPathTemplate": "/catalog/items",
      "DownstreamPathTemplate": "/items",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7178
        }
      ],
      "FileCacheOptions": {
        "TtlSeconds": 60
      },
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "BearerScheme",
       // "AllowedScopes": [ "catalog read profile email" ] // Ocelot sees KeyKloak scopes as one scope (one string instead of array)
      }
    },
    {
      "UpstreamHttpMethod": [ "Get" ],
      "UpstreamPathTemplate": "/catalog/categories",
      "DownstreamPathTemplate": "/categories",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7178
        }
      ],
      "FileCacheOptions": { "TtlSeconds": 60 }
    },
    // catch all
    {
      "UpstreamPathTemplate": "/carting/{v}/{everything}",
      "DownstreamPathTemplate": "/api/{v}/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7284
        }
      ]
    },
    // aggregation (works only with GET)
    {
      "UpstreamPathTemplate": "/catalog/items/{id}",
      "DownstreamPathTemplate": "/catalog/items/{id}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7178
        }
      ],
      "Key": "Item"
    },
    {
      "UpstreamPathTemplate": "/catalog/items/{id}/details",
      "DownstreamPathTemplate": "/items/{id}/details",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7178
        }
      ],
      "Key": "Details"
    }
  ],
  "Aggregates": [
    {
      "UpstreamPathTemplate": "/aggregation/items/{id}",
      "RouteKeys": [ //probably ocelot doesn't support aggregation routes from the same microservice (7178)
        "Item",
        "Details"
      ]
      //"Aggregator": "FakeDefinedAggregator" //not required (for complex logic if needed)
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:7076"
  }
}

// examples:
//https://localhost:7076/carting/v2/carts/25
//https://localhost:7076/catalog/items/1
// aggregation: https://localhost:7076/aggregation/items/1
